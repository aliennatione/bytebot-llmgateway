# ==============================
# BYTEBOT CONFIGURAZIONE GENERALE
# ==============================
BYTEBOT_AI_PROVIDER=llmgateway

# ==============================
# HUGGING FACE SETTINGS (Remoto)
# ==============================
HF_API_KEY=your_huggingface_api_token
HF_MODEL=tiiuae/falcon-7b-instruct

# ==============================
# OPENROUTER SETTINGS (Remoto)
# ==============================
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=phi-3.1-mini-3.8b

# ==============================
# LOCAL MODEL SETTINGS (LLaMA.cpp / GGUF)
# ==============================
# Percorso del modello locale GGUF
LOCAL_MODEL_PATH=/models/Phi-3.1-mini-4k-instruct-Q4_K_M.gguf
# Esempi di modelli alternativi:
#LOCAL_MODEL_PATH=/models/mpt-7b-instruct.Q4_K_M.gguf
#LOCAL_MODEL_PATH=/models/falcon-7b-instruct.Q4_K_M.gguf

# ==============================
# DATABASE SETTINGS (PostgreSQL)
# ==============================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/bytebotdb

# ==============================
# SERVIZI BYTEBOT
# ==============================
BYTEBOT_DESKTOP_BASE_URL=http://bytebot-desktop:9990
BYTEBOT_AGENT_BASE_URL=http://bytebot-agent:9991
BYTEBOT_DESKTOP_VNC_URL=http://bytebot-desktop:9990/websockify

# ==============================
# LLMGATEWAY CONFIGURAZIONE
# ==============================
# Opzionale: parametri avanzati
# LLMGATEWAY_LOG_LEVEL=info
# LLMGATEWAY_PORT=7000
# LLMGATEWAY_CACHE_ENABLED=true
# LLMGATEWAY_RATE_LIMIT=60
